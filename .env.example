# Funding Rate Arbitrage Bot Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Database Configuration
# ===========================================

# PostgreSQL connection string
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/funding_rate_arb

# ===========================================
# Exchange Configuration
# ===========================================

# Exchange API credentials
EXCHANGE_API_KEY=your_api_key_here
EXCHANGE_API_SECRET=your_api_secret_here

# Coinbase Advanced Trade API (CDP API Keys)
# Get keys from: https://portal.cdp.coinbase.com/
COINBASE_API_KEY=
COINBASE_API_SECRET=

# Trading pair (e.g., BTC-USDT, ETH-USDT)
TRADING_PAIR=BTC-USDT

# ===========================================
# Trading Parameters
# ===========================================

# Minimum funding rate to enter position (basis points, e.g., 10 = 0.10%)
MIN_FUNDING_RATE_BPS=10

# Maximum position size in USD
MAX_POSITION_SIZE_USD=10000

# Maximum leverage (basis points, e.g., 30000 = 3x)
MAX_LEVERAGE_BPS=30000

# Maximum slippage tolerance (basis points, e.g., 50 = 0.50%)
MAX_SLIPPAGE_BPS=50

# ===========================================
# Risk Management
# ===========================================

# Stop loss percentage (e.g., 5 = 5%)
STOP_LOSS_PERCENT=5

# Take profit percentage (e.g., 10 = 10%)
TAKE_PROFIT_PERCENT=10

# ===========================================
# Operational Settings
# ===========================================

# Server port
PORT=3000

# Node environment (development, production, test)
NODE_ENV=development

# Dry run mode (true = no real trades)
DRY_RUN=true

# Log level (debug, info, warn, error)
LOG_LEVEL=debug

# Evaluation tick interval in milliseconds
EVAL_TICK_MS=2000

# Funding rate refresh interval in milliseconds
FUNDING_REFRESH_MS=30000

# Account refresh interval in milliseconds
ACCOUNT_REFRESH_MS=30000
